{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "happy-ui": [
        "components/index.ts"
      ],
      "happy-ui/esm/*": [
        "components/*"
      ],
      "happy-ui/lib/*": [
        "components/*"
      ]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "components",
    "doc-comps",
    "config",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "lib",
    "esm",
    ".docz",
    "doc-comps",
    "global.d.ts"
  ]
}